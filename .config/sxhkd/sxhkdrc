# Volume
{XF86AudioLowerVolume,XF86AudioRaiseVolume,@XF86AudioMute}
	pamixer -{d 5,i 5,t} && x-dwmblocks-signal 2

# Brightness
{XF86MonBrightnessUp,XF86MonBrightnessDown}
	xbacklight -{inc,dec} 5

# Screenshot
ctrl + alt + @Print
	x-screenshot select
alt + @Print
	x-screenshot
ctrl + @Print
	x-screenshot clip select
@Print
	x-screenshot clip

# Login
super + ctrl + shift + @s
	x-lock & sleep 1 && loginctl suspend
super + ctrl + shift + @{r,q}
	loginctl {reboot,poweroff}
super + ctrl + shift + @l
	x-lock

# Keyboard
super + ctrl + @space
	switch-keyboard-layout

